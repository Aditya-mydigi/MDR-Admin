generator client {
  provider = "prisma-client-js"
  output   = "./generated/panel"
}

datasource panel {
  provider = "postgresql"
  url      = env("DATABASE_URL_MDR_PANEL")
}

model mdrPanelUser {
  @@map("mdr_panel_users")

  id              String    @id @default(dbgenerated("gen_random_uuid()")) @panel.Uuid
  mdr_id          String?   @unique @panel.VarChar(15)
  email           String    @unique @panel.VarChar(200)
  first_name      String    @panel.VarChar(100)
  last_name       String?   @panel.VarChar(100)
  phone1          String    @panel.VarChar(15)
  phone2          String?   @panel.VarChar(15)
  role            user_role @default(employee)
  date_of_joining DateTime  @default(now()) @panel.Timestamptz(6)
  updated_at      DateTime  @default(now()) @panel.Timestamptz(6)
  isactive        Boolean   @default(true)
}

enum user_role {
  admin
  employee
}
